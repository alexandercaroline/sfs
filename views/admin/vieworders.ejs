<%- include('./partials/header') %>

<div class="container">
    <h2 class="text-center">View Orders</h2>
    <div class="row justfiy-content-center " style="margin-bottom: 20px;">
      <div class="col-md-10">
        <form action="/admin/searchclient" class="form-inline" method="post" >
            FROM DATE : <input name="from" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            TO DATE : <input name="to" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            <button class="btn btn-primary">SEARCH </button>
        </form>
      </div>
    </div>
    <table class="table table-bordered" id="orderTable">
      <thead>
        <tr>
          <th>Date</th>
          <th scope="col"> Client Name</th>
          <th scope="col">Crop Name</th>
          <th scope="col">Quantity</th>
          <th scope="col">Description</th>
          <th>Actions</th>
       
        </tr>
      </thead>
      <tbody>
       
      


        
        <% orders.forEach(order => { %>
          <tr>
            <td><%=new Date(order.created).toDateString()%></td>
            <td><%=`${order.fname} ${order.lname}`%></td>
            <td><%=order.name%></td>
            <td><%=order.quantity%></td>
            <td><%=order.description%></td>
             <td>
                 <div class="row">
                   
                    <div class="col-xs-12">
                      <form method="GET" action="/admin/order/remove/<%=order.id%>" >
                         <button class="btn btn-sm btn-danger">Remove</button>
                      </form>
                      
                    </div>
                 </div>
             </td> 
     
        </tr>
        <%   }) %>

      </tbody>
    </table>
    
    </div>

  
  
<%- include('./partials/footer') %>
  
  