<%- include('./partials/header') %>

<div class="container">
    <h2 class="text-center">View Clients</h2>
    <div class="row justfiy-content-center " style="margin-bottom: 20px;">
      <div class="col-md-10">
        <form action="/admin/searchclient" class="form-inline" method="post" >
            FROM DATE : <input name="from" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            TO DATE : <input name="to" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            <button class="btn btn-primary">SEARCH </button>
        </form>
      </div>
    </div>
    <table class="table table-bordered" id="clientTable">
      <thead>
        <tr>
          <th> Date</th>
          <th scope="col">Name</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Email</th>
          <th>Actions</th>
       
        </tr>
      </thead>
      <tbody>
       <% clients.forEach(client => { %>
        <tr>
          <td><%=new Date(client.created).toDateString()%></td>
          <td><%=`${client.fname} ${client.lname}`%></td>
          <td><%=client.phoneno%></td>
          <td><%=client.email%></td>
           <td>
               <div class="row">
                 
                  <div class="col-xs-12">
                    <form method="GET" action="/admin/client/remove/<%=client.clientID%>" >
                       <button class="btn btn-sm btn-danger">Remove</button>
                    </form>
                    
                  </div>
               </div>
           </td> 
   
      </tr>
      <%   }) %>

      </tbody>
    </table>
    
    </div>

  
  
<%- include('./partials/footer') %>
  
  