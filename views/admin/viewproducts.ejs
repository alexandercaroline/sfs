<%- include('./partials/header') %>

<div class="container">
    <h2 class="text-center">View Products</h2>
    <table class="table table-bproducted" id="farmerTable">
      <thead>
        <tr>
          <th>Date</th>
          <th scope="col"> Farmer Name</th>
          <th scope="col"> Location</th>
          <th scope="col"> Phone Number</th>
          <th scope="col"> Prduct Name</th>
          <th scope="col"> Quantity</th>
          <th scope="col"> Price</th>
          <th>Actions</th>
       
        </tr>
      </thead>
      <tbody>

                
        <% products.forEach(product => { %>
          <tr>
            <td><%=new Date(product.created).toDateString()%></td>
            <td><%=`${product.fname} ${product.lname}`%></td>
            <td><%=`${product.county}, ${product.location}`%></td>
            <td><%=product.phoneno%></td>
            <td><%=product.name%></td>
            <td><%=product.quantity%></td>>
            <td><%=product.price%></td>
             <td>
                 <div class="row">
                   
                    <div class="col-xs-12">
                      <form method="GET" action="/admin/product/remove/<%=product.id%>" >
                         <button class="btn btn-sm btn-danger">Remove</button>
                      </form>
                      
                    </div>
                 </div>
             </td> 
     
        </tr>
        <%   }) %>

      </tbody>
    </table>
    
    </div>

  
  
<%- include('./partials/footer') %>
  
  