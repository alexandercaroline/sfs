<% 
     let  er = {}
     let model ={}
     try{
         if(errors != undefined){
           er = errors
         }

         model = models
     }catch(e){
     }

    
 %>
 <!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SFS Forgot Password</title>
    <!-- Core CSS - Include with every page -->
    <link href="<%=baseURL%>/assets/plugins/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="<%=baseURL%>/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="<%=baseURL%>/assets/plugins/pace/pace-theme-big-counter.css" rel="stylesheet" />
   <link href="<%=baseURL%>/assets/css/style.css" rel="stylesheet" />
   <link href="<%=baseURL%>/assets/css/style.css" rel="stylesheet" />
    <link href="<%=baseURL%>/assets/css/main-style.css" rel="stylesheet" />
    <link href="<%=baseURL%>/assets/css/stylee.css" rel="stylesheet" >

</head>

<body class="body-Login-back">

    <div class="container">
       
   

        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center logo-margin ">
              <!-- <img src="assets/img/logo.png" alt=""/> -->
              <H1>SMART FARMERS' SYSTEM</H1>
            
                </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">                  
                    <div class="panel-heading">
                        <h3 class="panel-title">Enter code and new password</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/auth/changepassword">
                            <fieldset>
                               
                                <div class="form-group">
                                    <input required class="form-control" value="<%=model.code != undefined ? model.code: ''%>" placeholder="Code" required name="code" type="code" autofocus>
                                    <span class="text-danger"><%=er.codeError != undefined ? er.codeError : ''%></span>
                                </div>
                                <div class="form-group">
                                    <input required class="form-control" value="<%=model.password != undefined ? model.password: ''%>" placeholder="New Password" name="password" type="password" value="">
                                    <span class="text-danger"><%=er.passwordError != undefined ? er.passwordError : ''%></span>
                                </div>
                    
             
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-success btn-block">Change Password</button>
                       
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

     <!-- Core Scripts - Include with every page -->
    <script src="/assets/plugins/jquery-1.10.2.js"></script>
    <script src="/assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="/assets/plugins/metisMenu/jquery.metisMenu.js"></script>

</body>

</html>
