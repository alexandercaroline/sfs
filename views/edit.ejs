
<%- include('./partials/farmerheader') %>
<div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
 
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info</h3>
        <% try {
            if(success != null){
            %>
              <div class="alert alert-success" role="alert">
                 Profile updated successfully !
              </div>
            <%
           }
        } catch (error) {
          console.log(error);
        } %>
        <form class="form-horizontal" action="/farmer/edit" method="POST" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">First name:</label>
            <div class="col-lg-8">
              <input class="form-control" required type="text" name="fname" value="<%=farmer.fname%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Last name:</label>
            <div class="col-lg-8">
              <input class="form-control" required type="text" name="lname" value="<%=farmer.lname%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" required type="email" name="email" value="<%=farmer.email%>">
            </div>
          </div>
    
          <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <input class="form-control" name="password" type="password" value="">
            </div>
          </div>
      

          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
               <input type="submit" class="btn btn-primary" value="Save Changes">
            </div>
          </div>

        </form>
      </div>
  </div>
</div>
<hr>
  
<%- include('./partials/footer') %>
  
  