<%- include('./partials/clientheader') %>

<div class="container-fluid">
  <div class="row" style="margin-top:20px;">
      <div class="col-md-6 center-block" style="float:none;">
        <div style="float: none;" class="col-md-8 center-block">
          <form class="form-inline" method="POST" action="/client/searchsales">
              <div class="form-group">
                <label>PRODUCT NAME :</label>
                <input type="name" class="form-control" id="name" placeholder="Enter name" name="name">
              </div>
              <button type="submit" class="btn btn-default">Search</button>
          </form>
        </div>
      </div>
  </div>
</div>



<h3 class="text-center">RESULTS</h3>
<% products.forEach(crop => { %>
    <div class="container py-3 mt-4" style="margin-bottom: 20px;">
        <div class="card">
          <div class="row ">
              <div class="col-md-4 pt-3">
                <img style="width: 100%;height:200px;" src="<%=crop.image%>" class="w-100">
              </div>
              <div class="col-md-8 px-3">
                <div class="card-block px-3">
                  <h4 class="card-title">Product: <%=crop.name%></h4>
                  <p class="card-text">Quantity: <%=crop.quantity%> </p>
                  <p class="card-text">Price : <%=crop.price%></p>
                <p class="card-text">Seller Name:<%=`${crop.fname} ${crop.lname}`%></p>
                  <p class="card-text">Seller Phone : <%=crop.phoneno%></p>
                  <p class="card-text">Location : <%=`${crop.location} , ${crop.county}`%></p>
                </div>
              </div>
    
            </div>
          </div>
        </div>
      </div>
<% }); %>
  
<%- include('./partials/footer') %>
  
  